{
  "name": "Development Container for scitt-ccf-ledger",
  "dockerFile": "Dockerfile",
  "hostRequirements": {
    "cpus": 4
  },
  "remoteEnv": {
    "PLATFORM": "virtual"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-from-docker:1": {
      "version": "20.10.8"
    }
  },
  "onCreateCommand": "apt-get update && apt-get install -y libcurl4-openssl-dev"
}