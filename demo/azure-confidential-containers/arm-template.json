{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "name": {
      "type": "string",
      "defaultValue": "scitt-ccf-ledger-demo",
      "metadata": {
        "description": "Name for the container group"
      }
    },
    "fileShareName": {
      "type": "string",
      "metadata": {
        "description": "The name of the Azure File Share to mount as a volume."
      }
    },
    "storageAccountName": {
      "type": "string",
      "metadata": {
        "description": "The name of the Storage Account that contains the Azure File Share."
      }
    },
    "storageAccountKey": {
      "type": "string",
      "metadata": {
        "description": "The access key for the Storage Account that contains the Azure File Share."
      }
    },
    "registryServer": {
      "type": "string",
      "defaultValue": "index.docker.io"
    },
    "registryUsername": {
      "type": "string"
    },
    "registryPassword": {
      "type": "string"
    }
  },
  "resources": [
    {
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2025-09-01",
      "name": "[parameters('name')]",
      "location": "North Europe",
      "properties": {
        "containers": [
          {
            "name": "[parameters('name')]",
            "properties": {
              "image": "username/demo-scitt-ccf-ledger:latest",
              "command": [
                "cchost",
                "--config",
                "/host/dev-config.json"
              ],
              "ports": [
                {
                  "port": 8000
                }
              ],
              "resources": {
                "requests": {
                  "cpu": 1,
                  "memoryInGB": 1
                }
              },
              "volumeMounts": [
                {
                  "name": "configvolume",
                  "mountPath": "/host",
                  "readOnly": false
                }
              ]
            }
          }
        ],
        "volumes": [
          {
            "name": "configvolume",
            "azureFile": {
              "readOnly": false,
              "shareName": "[parameters('fileShareName')]",
              "storageAccountName": "[parameters('storageAccountName')]",
              "storageAccountKey": "[parameters('storageAccountKey')]"
            }
          }
        ],
        "imageRegistryCredentials": [
          {
            "server": "[parameters('registryServer')]",
            "username": "[parameters('registryUsername')]",
            "password": "[parameters('registryPassword')]"
          }
        ],
        "sku": "Confidential",
        "osType": "Linux",
        "restartPolicy": "Never",
        "ipAddress": {
          "type": "Public",
          "ports": [
            {
              "protocol": "tcp",
              "port": 8000
            }
          ]
        },
        "confidentialComputeProperties": {
          "ccePolicy": ""
        }
      }
    }
  ],
  "outputs": {
    "containerIPv4Address": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.ContainerInstance/containerGroups/', parameters('name'))).ipAddress.ip]"
    }
  }
}